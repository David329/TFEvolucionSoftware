@model UPCNETSystemCliente.ViewModel.Alumno.LstCursoViewModel
@{
    Layout = "~/Views/Layout/AlumnoLayout.cshtml";
}

<form role="form" method="post" action="@Url.Action("LstCurso")">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title"><strong>Mis cursos</strong></h5>
        </div>
        <div class="panel-body">
            Notas de mis cursos
        </div>
        <div class="title_right">
            <div class="col-md-4 col-sm-4 col-xs-12 form-group pull-right top_search">
                <div class="form-group">
                    <label>Buscar por Ciclo Academico</label>
                    <select id="ciclo" class="form-control" name="ciclo">
                        <option> 1 </option>
                        <option> 2</option>
                        <option> 3</option>
                        <option> 4</option>
                        <option> 5</option>
                        <option> 6</option>
                        <option> 7</option>
                        <option> 8</option>
                        <option> 9</option>
                        <option> 10</option>
                        <option> 11</option>
                        <option> 12</option>
                    </select>
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i>Buscar</button>
                    </span>
                </div>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>IDCurso</th>
                    <th>Curso</th>
                    <th>Profesor</th>
                    <th>PC1</th>
                    <th>EP</th>
                    <th>PC2</th>
                    <th>EF</th>
                    <th>Promedio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listCursoAlumnoReporte)
            {
                    <tr>
                        <td>@item.idCurso</td>
                        <td>@item.curso</td>
                        <td>@item.profesor</td>
                        <td>@item.pc1</td>
                        <td>@item.pc2</td>
                        <td>@item.ep</td>
                        <td>@item.ef</td>
                        <td>@((item.pc1 + item.pc2 + item.ep + item.ef) / 4)</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</form>